<p id="notice"><%= notice %></p>

<h3>Listing of all Posts</h3><br>
<div class="table-responsive">

  <table class="table table-condensed table-bordered">
    <thead>
      <tr class="table-info">
        <th>Content</th>
        <th>User</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.name %></td>
          <td><%= link_to 'Show Post', post, class: 'btn btn-outline-info' %></td>
          <td><%= link_to 'Edit Post', edit_post_path(post), class: 'btn btn-outline-warning' %></td>
          <td><%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Write a new Post', new_post_path, class: 'btn btn-outline-primary' %><br><br>
  <%= link_to 'View all Users', users_path, class: 'btn btn-outline-primary' %>
</div>
