<p id="notice"><%= notice %></p>

<h3>Listing Of All Posts</h3><br>
<div class="table-responsive">

  <table class="table table-condensed table-bordered">
    <thead>
      <tr class="table-info">
        <th>Content</th>
        <th>User</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.name %></td>
          <td><%= link_to 'Show Post', post %></td>
          <td><%= link_to 'Edit Post', edit_post_path(post) %></td>
          <td><%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Write New Post', new_post_path %><br><br>
  <%= link_to 'View All Users', users_path %>
</div>
