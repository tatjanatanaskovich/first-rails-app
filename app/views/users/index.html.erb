<p id="notice"><%= notice %></p>

<h3>Listing of all Users</h3><br>
<div class="table-responsive">
  <table class="table table-condensed table-bordered">
    <thead>
      <tr class="table-info">
        <th>Name</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: 'btn btn-outline-info' %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-warning' %></td>
          <td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <br>

  <%= link_to 'Create a new User', new_user_path, class: 'btn btn-outline-primary' %><br><br>
  <%= link_to ' View all Posts', root_path, class: 'btn btn-outline-primary' %>
